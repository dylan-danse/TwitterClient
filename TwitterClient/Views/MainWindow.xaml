<Window x:Class="TwitterClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TwitterClient"
        mc:Ignorable="d"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto"
        Title="Twitter Client" Height="485.368" Width="904.118">
    <Grid Background="#FFC1EAF3">
        <Grid.RowDefinitions>
            <RowDefinition Height="29"/>
            <RowDefinition Height="64"/>
            <RowDefinition Height="34"/>
            <RowDefinition Height="290*"/>
            <RowDefinition Height="24*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="631*"/>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="99*"/>
            <ColumnDefinition Width="99*"/>
            <ColumnDefinition Width="22*"/>
        </Grid.ColumnDefinitions>

        <Button x:Name="ButtonTweet" Content="Tweet" Height="Auto" Click="ButtonTweet_Click" IsDefault="True" Background="#FF36D8FF" Foreground="White" Grid.Column="3" Grid.Row="1" BorderBrush="White" FontSize="32" FontFamily="Lucida Sans Unicode" Grid.ColumnSpan="2"/>
        <RichTextBox x:Name="RichTextBoxTweet"  Grid.Column="1" Grid.Row="1" BorderThickness="4,4,4,4" AcceptsTab="True" Block.LineHeight="8">
            <FlowDocument>
                <Paragraph>
                    <Run Text="Votre tweet ..."/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Label x:Name="UsernameLabel" Grid.Column="3" HorizontalContentAlignment="Left" VerticalContentAlignment="Center"/>
        <Label x:Name="DisconnectLabel" Content="Disconnect" Grid.Column="4" Background="#00000000" Foreground="#FF36D8FF" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" MouseDown="DisconnectLabel_MouseDown"/>

        <ListBox x:Name="TimelineListBox" ItemsSource="{Binding}" Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="4">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition Height="2*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="55*"/>
                            <ColumnDefinition Width="452*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="{Binding User.Name}" Grid.Column="1" FontSize="16" FontWeight="Bold" />
                        <Image  Grid.RowSpan="2" Source="{Binding User.ProfilePictureURL}" />
                        <Label Grid.Column="1" Grid.Row="1" Content="{Binding Tweet}"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

    </Grid>
</Window>
