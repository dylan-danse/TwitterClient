<Window x:Class="TwitterClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TwitterClient"
        mc:Ignorable="d"
        Background="#F2EEE8"
        FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto"
        Title="Twitter Client" Height="772" Width="1284">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="539*"/>
            <RowDefinition Height="57*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1095*"/>
            <ColumnDefinition Width="180"/>
            <ColumnDefinition Width="180"/>
        </Grid.ColumnDefinitions>

        <Button x:Name="ButtonTweet" Content="Tweet" Height="Auto" Click="ButtonTweet_Click" IsDefault="True" Background="#FF36D8FF" Foreground="White" Grid.Row="1" BorderBrush="White" FontSize="32" FontFamily="Lucida Sans Unicode" Margin="0,24,0,19" Grid.ColumnSpan="2" Grid.Column="1"/>
        <RichTextBox x:Name="RichTextBoxTweet" BorderThickness="4,4,4,4" AcceptsTab="True" Block.LineHeight="8" Grid.Row="1" Margin="10">
            <FlowDocument>
                <Paragraph>
                    <Run Text="Votre tweet ..."/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>

        <Rectangle Fill="White" Grid.ColumnSpan="3"/>
        <Label x:Name="UsernameLabel" Grid.Column="1" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" />
        <Label x:Name="DisconnectLabel" Content="Disconnect" Background="#00000000" Foreground="#FF36D8FF" Grid.Column="2" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" MouseDown="DisconnectLabel_MouseDown"/>
        <Image x:Name="image" HorizontalAlignment="Left" Height="45" Width="45" Margin="482,0,0,0" VerticalAlignment="Top" Source="pack://siteoforigin:,,,/Resources/Twitter_logo_blue.png" RenderTransformOrigin="0.233,0.267"/>

        <ListBox x:Name="TimelineListBox" ItemsSource="{Binding}" Background="White" Grid.Row="2" Grid.ColumnSpan="3" Grid.RowSpan="2" Margin="10">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid >
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition Height="2*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="55"/>
                            <ColumnDefinition Width="452*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="{Binding User.Name}" Grid.Column="1" FontSize="16" FontWeight="Bold" />
                        <Image  Grid.RowSpan="2" Source="{Binding User.ProfilePictureURL}" />
                        <Label Grid.Column="1" Grid.Row="1" Content="{Binding Tweet}"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>



    </Grid>
</Window>
