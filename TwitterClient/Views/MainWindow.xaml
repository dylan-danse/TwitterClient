<Window x:Class="TwitterClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TwitterClient"
        mc:Ignorable="d"
        Title="Twitter Client" Height="485.368" Width="904.118">
    <Grid Background="#FFC1EAF3">
        <Grid.RowDefinitions>
            <RowDefinition Height="29*"/>
            <RowDefinition Height="64*"/>
            <RowDefinition Height="34*"/>
            <RowDefinition Height="290*"/>
            <RowDefinition Height="24*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="620*"/>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="194*"/>
            <ColumnDefinition Width="21*"/>
        </Grid.ColumnDefinitions>

        <Button x:Name="ButtonTweet" Content="Tweet" Height="Auto" Click="ButtonTweet_Click" IsDefault="True" Background="#FF36D8FF" Foreground="White" Grid.Column="3" Grid.Row="1" BorderBrush="White" FontSize="32" FontFamily="Lucida Sans Unicode"/>
        <ListView x:Name="listViewTimeLine" ItemsSource="{Binding}" BorderThickness="4" BorderBrush="Gray" Background="White" Grid.ColumnSpan="3" Grid.Column="1" Grid.Row="3" FontFamily="Arial" FontSize="13.333">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <RichTextBox x:Name="RichTextBoxTweet"  Grid.Column="1" Grid.Row="1" BorderThickness="4,4,4,4" AcceptsTab="True" FontFamily="Microsoft Sans Serif" Block.LineHeight="8" TextChanged="RichTextBoxTweet_TextChanged" >
            <FlowDocument>
                <Paragraph>
                    <Run Text="Votre tweet ..."/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>

    </Grid>
</Window>
